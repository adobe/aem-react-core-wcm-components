{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "paths":{
      "react": ["node_modules/react"],
      "react-router": ["node_modules/react-router"],
      "react-router-dom": ["node_modules/react-router-dom"],
      "@adobe/cq-react-editable-components":  ["node_modules/@adobe/cq-react-editable-components"],
      "@adobe/cq-spa-component-mapping":  ["node_modules/@adobe/cq-spa-component-mapping"],
      "@adobe/cq-spa-page-model-manager":  ["node_modules/@adobe/cq-spa-page-model-manager"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
