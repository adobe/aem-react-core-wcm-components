<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <experienceFragmentLayout
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Experience Fragment Layout"
                            sling:orderBefore="cloudservices"
                            sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <customsection
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Background"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <includeType
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    fieldDescription="Sets a background color for the experience fragment"
                                                    fieldLabel="Color"
                                                    required="{Boolean}false"
                                                    value="transparent"
                                                    name="./backgroundColor">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <transparent jcr:primaryType="nt:unstructured"
                                                             text="Transparent (default)"
                                                             value="transparent"
                                                    />
                                                    <white jcr:primaryType="nt:unstructured"
                                                              text="White"
                                                              value="white"
                                                    />
                                                    <lightGrey jcr:primaryType="nt:unstructured"
                                                             text="Light grey"
                                                             value="lightGrey"
                                                    />
        
                                                </items>
                                            </includeType>
                                        </items>
                                    </customsection>
                                </items>
                            </column>
                        </items>
                    </experienceFragmentLayout>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>